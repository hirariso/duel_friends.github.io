<div class="home_page">
    <div class="home_container">
    <h1>〜デュエプレ広場にログイン〜</h1>
    <div class="error_message">
        <% if @error_message%>
        <%= @error_message%>
        <%end%>
        </div>
<%=form_tag("/login")do %>
    <h2>名前(HN)</h2>
    <input name="name" value="<%=params[:name]%>">
    <h2>パスワード</h2>
    <p><input name="password" type="password"></p>
    <input type="submit" value="ログイン" class="btn">
<%end%>
    </div>
</div>